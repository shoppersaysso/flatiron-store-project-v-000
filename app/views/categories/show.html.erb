<h1><%= @category.title %></h1>
<ul>
<% @category.items.each do |item| %>
  <% if current_user %>
    <p><%=  link_to item.title, item_path(item) %> | <%= "$#{item.price.to_f/100}" %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
  <% else %>
    <p><%=  link_to item.title, item_path(item) %> | <%= "$#{item.price.to_f/100}" %> </p>
  <% end %>
<% end %>
</ul>
